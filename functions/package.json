    "lodash.flatten": "^4.4.0",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.4",
    "eslint": "^4.12.0",
    "eslint-plugin-promise": "^3.6.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "private": true
}
